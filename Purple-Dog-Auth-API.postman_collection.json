{
  "info": {
    "name": "Purple Dog Auth API",
    "description": "API collection for Purple Dog - Users & Authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Auth - Registration & Login",
      "item": [
        {
          "name": "1.1 Register Particular User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('userId', jsonData.id);",
                  "    console.log('User created with ID: ' + jsonData.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"password123\",\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"role\": \"particular\",\n  \"address_line\": \"123 Main Street\",\n  \"city\": \"Paris\",\n  \"postal_code\": \"75001\",\n  \"country\": \"France\",\n  \"age\": 25,\n  \"rgpd_accepted\": true,\n  \"newsletter\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users",
              "host": ["{{baseUrl}}"],
              "path": ["users"]
            },
            "description": "Register a new PARTICULAR user (requires: rgpd_accepted, address_line)"
          }
        },
        {
          "name": "1.2 Register Professional User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"company@business.com\",\n  \"password\": \"password123\",\n  \"first_name\": \"Marie\",\n  \"last_name\": \"Martin\",\n  \"role\": \"professional\",\n  \"address_line\": \"456 Business Avenue\",\n  \"city\": \"Lyon\",\n  \"postal_code\": \"69001\",\n  \"country\": \"France\",\n  \"company_name\": \"Art Gallery Paris\",\n  \"siret\": \"12345678901234\",\n  \"official_document_url\": \"https://example.com/kbis.pdf\",\n  \"speciality\": \"Modern Art\",\n  \"items_preference\": \"Paintings, Sculptures\",\n  \"website_company\": \"https://artgallery.com\",\n  \"rgpd_accepted\": true,\n  \"cgv_accepted\": true,\n  \"newsletter\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users",
              "host": ["{{baseUrl}}"],
              "path": ["users"]
            },
            "description": "Register a PROFESSIONAL user (requires: company_name, siret, official_document_url, address_line, speciality, items_preference, cgv_accepted, rgpd_accepted)"
          }
        },
        {
          "name": "1.3 Login (Get JWT Tokens)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', jsonData.access_token);",
                  "    pm.collectionVariables.set('refreshToken', jsonData.refresh_token);",
                  "    console.log('Tokens saved!');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "description": "Login and get JWT access_token and refresh_token. NOTE: User must be verified first!"
          }
        },
        {
          "name": "1.4 Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', jsonData.access_token);",
                  "    pm.collectionVariables.set('refreshToken', jsonData.refresh_token);",
                  "    console.log('New tokens saved!');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh_token\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "refresh"]
            },
            "description": "Get new tokens using refresh_token"
          }
        },
        {
          "name": "1.5 Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh_token\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "logout"]
            },
            "description": "Logout and revoke refresh token"
          }
        }
      ]
    },
    {
      "name": "2. Auth - Email Verification",
      "item": [
        {
          "name": "2.1 Send Verification Email",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/send-verification",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "send-verification"]
            },
            "description": "Send verification email with token"
          }
        },
        {
          "name": "2.2 Verify Account (with token)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/auth/verify?token=YOUR_TOKEN_HERE",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "verify"],
              "query": [
                {
                  "key": "token",
                  "value": "YOUR_TOKEN_HERE"
                }
              ]
            },
            "description": "Verify account using token from email"
          }
        }
      ]
    },
    {
      "name": "3. Users - Protected Endpoints",
      "item": [
        {
          "name": "3.1 Get Current User (me)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            },
            "description": "Get current logged-in user info from JWT token"
          }
        },
        {
          "name": "3.2 Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users",
              "host": ["{{baseUrl}}"],
              "path": ["users"]
            },
            "description": "Get all users (requires JWT token)"
          }
        },
        {
          "name": "3.3 Get User by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/1",
              "host": ["{{baseUrl}}"],
              "path": ["users", "1"]
            },
            "description": "Get user by ID (requires JWT token)"
          }
        },
        {
          "name": "3.4 Update User",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"John Updated\",\n  \"city\": \"Marseille\",\n  \"newsletter\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/1",
              "host": ["{{baseUrl}}"],
              "path": ["users", "1"]
            },
            "description": "Update user (requires JWT token)"
          }
        },
        {
          "name": "3.5 Delete User",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/1",
              "host": ["{{baseUrl}}"],
              "path": ["users", "1"]
            },
            "description": "Delete user (requires JWT token)"
          }
        }
      ]
    },
    {
      "name": "4. Quick Test Flow",
      "item": [
        {
          "name": "Step 1 - Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('testUserId', jsonData.id);",
                  "    pm.collectionVariables.set('testEmail', jsonData.email);",
                  "    console.log('Test user created: ' + jsonData.email);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"quicktest@example.com\",\n  \"password\": \"testpass123\",\n  \"first_name\": \"Quick\",\n  \"last_name\": \"Test\",\n  \"role\": \"particular\",\n  \"address_line\": \"Test Street 1\",\n  \"city\": \"Paris\",\n  \"postal_code\": \"75000\",\n  \"country\": \"France\",\n  \"age\": 30,\n  \"rgpd_accepted\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users",
              "host": ["{{baseUrl}}"],
              "path": ["users"]
            }
          }
        },
        {
          "name": "Step 2 - Verify in DB (manual)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"],
              "path": [""]
            },
            "description": "Run this SQL in your database:\nUPDATE users SET is_verified = true WHERE email = 'quicktest@example.com';"
          }
        },
        {
          "name": "Step 3 - Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', jsonData.access_token);",
                  "    pm.collectionVariables.set('refreshToken', jsonData.refresh_token);",
                  "    console.log('Logged in! Tokens saved.');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"quicktest@example.com\",\n  \"password\": \"testpass123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Step 4 - Get My Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "5. Health Check",
      "item": [
        {
          "name": "API Health",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"],
              "path": [""]
            }
          }
        }
      ]
    }
  ]
}

