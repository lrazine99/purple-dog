# Development Dockerfile
FROM node:20-alpine

WORKDIR /app

# Install dependencies (including devDependencies)
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

# Create public directory if it doesn't exist
RUN mkdir -p public

# Set NODE_ENV to development
ENV NODE_ENV=development

# Expose port
EXPOSE 3000

# Start the Next.js development server
CMD ["npm", "run", "dev"]

